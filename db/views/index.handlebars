<h1>Burgers!</h1>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burgers-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<form class="create-form">
  <div class="form-group">
      <label for="bu">Burger Name:</label>
      <input type="text" id="bu" name="name">
    </div>

  <div class="form-group">
      <label for="devour">Devoured?</label><br>
      <input type="radio" name="devour" value="1" checked> Devoured!<br>
      <input type="radio" name="devour" value="0"> Devoured
    </div>

  <button type="submit">Add Burger</button>
</form>





  
  
  
